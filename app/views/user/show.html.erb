
<div class="row">
<div class="col-md-3">
<h2 class="username"><%= if @user.first_name.empty? then ' '  else @user.first_name end  + ' ' + if @user.last_name.empty? then ' ' else @user.last_name end %></h2>
<br>
  <img src=" <%= @user.profile_image %>" class="img-circle">
  <div class="social">
    <%= link_to '<i class="fa fa-facebook-square fa-2x"></i>'.html_safe,  'http://facebook.com/' + @user.facebook if @user.facebook.present? %>
    <%= link_to '<i class="fa fa-twitter-square fa-2x"></i>'.html_safe, 'http://twitter.com/' + @user.twitter if @user.twitter.present? %>
    <%= link_to '<i class="fa fa-pinterest-square fa-2x"></i>'.html_safe, 'http://pinterest.com/' + @user.pinterest if @user.pinterest.present? %>
    <%= link_to '<i class="fa fa-instagram fa-2x"></i>'.html_safe, 'http://instagram.com/' + @user.instagram if @user.instagram.present? %>
    <%= link_to '<i class="fa fa-linkedin-square fa-2x"></i>'.html_safe, 'http://linkedin.com/' + @user.linkedin if @user.linkedin.present? %>
</div>
<br>
  <p><%= @user.description %></p>
  <div class="row">

